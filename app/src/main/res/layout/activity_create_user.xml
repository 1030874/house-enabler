<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rene.houseenabler.View.CreateUser">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brugernavn"
        android:id="@+id/lblUser"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/lblPassword"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddUser"
        android:width="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Adgangskode"
        android:id="@+id/lblPassword"
        android:layout_below="@+id/txtAddUser"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtAddPassword"
        android:width="300dp"
        android:layout_below="@+id/lblPassword"
        android:layout_alignStart="@+id/lblPassword"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonCreate"
        android:id="@+id/btnCreate"
        android:width="145dp"
        android:onClick="onCreateUser_onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lblPassword"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
