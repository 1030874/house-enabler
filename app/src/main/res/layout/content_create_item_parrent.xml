        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Opret hovedkategori"
        android:id="@+id/lblItemParrent"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/txtAddUser"
        android:layout_alignStart="@+id/txtAddUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddUser"
        android:width="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TilfÃ¸j hovedkategori"
        android:id="@+id/btnAddItemParrent"
        android:layout_below="@+id/txtAddUser"
